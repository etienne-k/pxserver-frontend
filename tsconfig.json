{
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": "./",
		"sourceMap": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"module": "esnext",
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "es2015",
		"outDir": "lib",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2018",
			"dom"
		]
	},
	"angularCompilerOptions": {
		"fullTemplateTypeCheck": false,
		"strictInjectionParameters": true
	}
}
