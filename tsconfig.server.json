{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"noImplicitAny": true,
		"removeComments": true,
		"moduleResolution": "node"
	},
	"paths": {
		"*": [
			"node_modules/*",
			"src/types/*"
		]
	},
	"include": [
		"server/**/*.ts"
	],
	"exclude": [
		"server/test.ts",
		"server/**/*.spec.ts",
		"node_modules"
	]
}